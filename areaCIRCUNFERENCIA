/* descripcion:  calcula el area de una circunferencia                        */
/* entrada: radio													                                    */
/* salida: area																                                */
/******************************************************************************/

 

#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include "math.h"


void main()
{float radio,area;
 printf("\t calculo del area de una circunferencia  \n");
 printf("\t ====================================== \n\n\n");
 printf("\n\nIngrese el radio: ");
 scanf("%f",&radio);
 if(radio>0)
   {
	//calcula el area
    area = 3.1416*radio*radio;
    printf("el area es %f",area);
   }
  else-
   {
	printf("\n\nERROR: El radio es menor o igual a 0");
   }
 getch();

 
}
