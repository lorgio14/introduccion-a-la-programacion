#include "stdafx.h"
#include "stdio.h"
#include "stdlib.h"
#define  nMax 100

void cargar (int vec[], int n);
void concatenar (int vecA[],int nA, int vecB[], int nB, int vecC[], int &nC);

void main()
{int nA, nB, vecA[nMax],vecB[nMax],vecC[nMax], nC;

printf("ingrese el numero de elementos del primer vector: ");
 scanf("%d",&nA);
printf("ingrese el numero de elementos del segundo vector: ");
 scanf("%d",&nB);

 cargar(vecA,nA);
 cargar(vecB,nB);
 concatenar(vecA,nA,vecB,nB,vecC,nC);

 printf("\n\n");
 system("pause");
}

void cargar (int vec[], int n)
{ int i,precio;
  for(i=0;i<n;i++)
  {printf("\ningrese vec[%d]:  ",i+1);
   scanf("%d",&vec[i]);
  }

}
void concatenar (int vecA[],int nA, int vecB[], int nB, int vecC[], int &nC)
{nC=0;
for(int i=0;i<nA;i++)
{
 vecC[nC]=vecA[i];
 nC=nC+1;
}
for(int i=0;i<nB;i++)
{
 vecC[nC]=vecB[i];
 nC=nC+1;
}
for(int i=0;i<nC;i++)
{printf("\n%d",vecC[i]);
}

}
